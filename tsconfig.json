{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,  // Permite a geração de arquivos .js

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,

    /* Pasta de saída dos arquivos compilados */
    "outDir": "./dist"  // Mover esta linha para dentro de "compilerOptions"
  },

  "include": [
    "src/**/*",
    "assets/**/*",
    "plugins/**/*",
    "scrypts/**/*",
    "engine/**/*",
    "public/**/*",
    "game/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist"  
  ],
}
