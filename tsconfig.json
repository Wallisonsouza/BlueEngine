{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true
  },
  "include": [
    "src",
    "engine_modules/module_vectors/Vector3.ts",
    "src/core/math/Matrix4x4.ts",
    "engine_modules/module_vectors/Quaternion.ts",
    "engine_modules/module_vectors/Vector2.ts",
    "engine_modules/module_vectors/Vector4.ts",
    "engine_plugins",
    "Engine/Experimental"
, "Engine/2D", "Experimental/SiteUsandoAPI", "Experimental/engine_visual", "Experimental/Util.ts", "Experimental/cache"  ]
}
